{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Authentication": {
    "Enabled": true
  },
  "ActiveDirectory": {
    "Domain": "yourdomain.local",
    "LdapPath": "LDAP://yourdomain.local",
    "Container": "DC=yourdomain,DC=local"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-must-be-at-least-32-characters-long-for-production",
    "Issuer": "https://yourcompany.com",
    "Audience": "file-api",
    "ExpirationMinutes": 60
  },
  "FileStorage": {
    "RootPath": "Files",
    "MaxFileSize": 52428800,
    "AllowedExtensions": [".png", ".jpg", ".jpeg", ".gif", ".pdf", ".txt", ".json"]
  }
}
